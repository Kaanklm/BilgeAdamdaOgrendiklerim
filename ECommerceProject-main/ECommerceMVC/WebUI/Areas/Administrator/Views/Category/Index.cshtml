
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .label-info a{
        color:white;
        font-weight:bold;
    }
</style>

@if (TempData["Result"] != null) { 
<div class="alert alert-success">
    <span>@TempData["Result"]</span>
</div>
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="row">
                    <div class="col-lg-9">
                        @ViewBag.Title
                    </div>
                    <div class="col-lg-3">
                        @Html.ActionLink("Alt Kategori Listesi", "Index","SubCategory", null, new { @class = "btn btn-sm btn-primary pull-right" })
                    </div>
                </div>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>Alt Kategori Sayısı</th>
                        <th><i class=" icon-edit"></i> Düzenleme</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var c in ViewBag.CategoryVM)
                    {
                    <tr>
                        <td>@c.CategoryName</td>
                        <td>@c.Description</td>
                        <td>
                            <span class="label label-info label-mini">
                                @if (c.SubCategories != null)
                                {
                                    <a href="#">@c.SubCategories.Count</a>
                                }
                                else
                                {
                                    <a href="#">0</a>
                                }
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-success btn-xs"><i class="icon-ok"></i></button>
                            <button class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>
                            <button class="btn btn-danger btn-xs"><i class="icon-trash "></i></button>
                        </td>
                    </tr>
                    }




                    
                </tbody>
            </table>
        </section>
    </div>
</div>

