
@{
    ViewBag.Title = "RegisterPending";
    Layout = "~/Views/Shared/_Layout.cshtml";

    AppUser user = ViewBag.User as AppUser;
}


@{
    if (user.IsActive)
    {
        <div class="container">
            <div class="alert alert-success">
                <h2>Aktivasyon</h2>
                <span>Üyeliğinizin durumu <strong>Aktif</strong></span>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="alert alert-warning">
                <h2>Aktivasyon</h2>
                <span>Üyeliğinizi aktif hale getirebilmek için lütfen <strong>@user.Email)</strong> adresinize gönderilen maili onaylayın.</span>
            </div>
        </div>
    }
}



